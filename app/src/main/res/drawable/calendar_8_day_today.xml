<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Külső kör -->
    <item>
        <shape android:shape="oval">
            <solid android:color="?backgroundColor" />
            <stroke
                android:width="2dp"
                android:color="@color/calendar8" />
        </shape>
    </item>

    <!-- Belső kör -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="?backgroundColor" />
            <stroke
                android:width="4dp"
                android:color="@color/calendarToday" />
        </shape>
    </item>

</layer-list>