<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="?background"/>
            <size
                android:width="4dp"
                android:height="4dp"/>
            <stroke
                android:width="1dp"
                android:color="?colorAccent"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_light_mode"
        android:top="4dp"
        android:bottom="4dp"
        android:right="4dp"
        android:left="4dp"
    />
</layer-list>